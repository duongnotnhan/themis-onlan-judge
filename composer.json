{
    "name": "duongnotnhan/themis-onlan-judge",
    "description": "Hệ Thống Kỳ Thi Themis OnLAN",
    "type": "project",
    "require": {
        "php": "^8.0",
        "vlucas/phpdotenv": "^5.5",
        "symfony/console": "^6.3",
        "doctrine/dbal": "^3.7",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.49"
    },
    "autoload": {
        "psr-4": {
            "App\\": "../src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "../tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "fix-code": "php-cs-fixer fix"
    },
    "config": {
        "platform": {
            "php": "8.3"
        }
    },
    "minimum-stability": "stable"
}
